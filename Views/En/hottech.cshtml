@using X.PagedList;
@using X.PagedList.Mvc.Core
@model HotTech
@using K2GGTT.Controllers
<div class="pad30 w1400" style="max-width: 1500px;">
	<div class="pad10">
		Target Marketing을 위한 기술분야별 유망기술 Bundling &amp; Packaging Module 
	</div>
    <div style="border-bottom:#CCC 1px solid; margin:30px auto;">
        <button class="tabBtn@(string.IsNullOrEmpty(ViewBag.Gubun) ? " active" : "")" onclick="GubunLink('')">All</button>
        <button class="tabBtn@(ViewBag.Gubun == "HealthCare" ? " active" : "")" onclick="GubunLink('HealthCare')">Healthcare</button>
        <button class="tabBtn@(ViewBag.Gubun == "BIO" ? " active" : "")" onclick="GubunLink('BIO')">BIO</button>
        <button class="tabBtn@(ViewBag.Gubun == "IT" ? " active" : "")" onclick="GubunLink('IT')">IT</button>
        <button class="tabBtn@(ViewBag.Gubun == "ET" ? " active" : "")" onclick="GubunLink('ET')">ET</button>
    </div>
    <div>
        @foreach (var m in ViewBag.List)
        {
            <div class="mb30">
                <li style="border: #CCC 1px solid;" class="pad30">
                    <h3><a href="/En/hottechdetail?id=@(m.Id)">@(m.Title)</a></h3>
                    <hr>
                    <div class="flex w100" style="box-sizing: border-box;">
                        <p>@(Extension.HtmlIncode(m.Content))</p>
                        <div style="width:400px;">
                            <img style="width: 100px;" src="~/ufile/@(m.ApplicantImgSrc)" alt="Image">
                            <div class="pad10">
                                <h5>@(m.ApplicantName)</h5>
                                <p>
                                    @(m.ApplicantMajor)
                                </p>
                            </div>
                        </div>
                    </div>
                </li>
            </div>
        }
    </div>
</div>
<script>
	function GubunLink(gubun) {
		let link = '';
		if (gubun != '') link = "?Gubun=" + gubun;
		location.href = "./hottech" + link;
	}
</script>